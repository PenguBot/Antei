{
  "name": "@pengubot/antei",
  "version": "0.0.1",
  "description": "Antei Framework for PenguBot",
  "bugs": {
    "url": "https://github.com/pengubot/antei/issues"
  },
  "license": "Apache-2.0",
  "author": "pengubot",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/pengubot/antei.git"
  },
  "homepage": "https://github.com/pengubot/antei",
  "scripts": {
    "build": "tsc -b src"
  },
  "dependencies": {
    "@sapphire/utilities": "sapphire-project/utilities#build-utilities",
    "colorette": "^1.2.1",
    "discord.js": "^12.3.1",
    "fs-nextra": "^0.5.1",
    "i18next": "^19.7.0",
    "i18next-node-fs-backend": "^2.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@pengubot/eslint-config": "^1.0.0",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "jest": "^26.4.1",
    "jest-circus": "^26.4.1",
    "lint-staged": "^10.2.11",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.2.0",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "dist",
    "!dist/tsconfig.tsbuildinfo"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --ext ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
